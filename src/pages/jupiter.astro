---

import Layout from "../layouts/Layout.astro";
import Planet from "../components/Planet.astro";
import Info from "../components/Info.astro";

import Footer from "../components/Footer.astro";

const response = await fetch('https://raw.githubusercontent.com/CVB91/planets_data/main/data.json');
const data = await response.json();

const {pathname} = Astro.url

const planetName = pathname.substring(1)

console.log(planetName)







let planetData = data.filter(a => a.name.toLowerCase() == planetName)


---


<Layout>
  <div class="flex h-[755px] w-full space-x-20 items-center justify-around">
    <Planet planetData={planetData}/>
    <Info planetData={planetData}/>
  </div>
    <div class="flex w-full h-full items-center justify-evenly">
        <Footer planetData={planetData}/>
    </div>

 
</Layout>
